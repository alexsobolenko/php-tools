{
    "name": "advanced-php-tools",
    "displayName": "Advanced PHP tools",
    "description": "Tools for better PHP development",
    "version": "0.1.3",
    "license": "MIT",
    "author": {
        "name": "Alexey Sobolenko",
        "email": "alexsobolenko@gmail.com"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/alexsobolenko/php-tools.git"
    },
    "icon": "assets/icon.png",
    "publisher": "alexsobolenko",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other",
        "Programming Languages"
    ],
    "keywords": [
        "php",
        "generator",
        "getters",
        "setters"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "php-tools.insert-getter",
                "title": "PHP Tools. Insert getter"
            },
            {
                "command": "php-tools.insert-setter",
                "title": "PHP Tools. Insert setter"
            },
            {
                "command": "php-tools.insert-getter-setter",
                "title": "PHP Tools. Insert getter and setter"
            },
            {
                "command": "php-tools.generate-class",
                "title": "PHP Tools. Generate class"
            },
            {
                "command": "php-tools.generate-abstract-class",
                "title": "PHP Tools. Generate abstract class"
            },
            {
                "command": "php-tools.generate-final-class",
                "title": "PHP Tools. Generate final class"
            },
            {
                "command": "php-tools.generate-enum",
                "title": "PHP Tools. Generate enum"
            },
            {
                "command": "php-tools.generate-interface",
                "title": "PHP Tools. Generate interface"
            },
            {
                "command": "php-tools.generate-trait",
                "title": "PHP Tools. Generate trait"
            }
        ],
        "configuration": {
            "title": "Advanced PHP Tools",
            "properties": {
                "advanced-php-tools.getter-setter-generate-phpdoc": {
                    "type": "boolean",
                    "default": true,
                    "description": "Generate phpdoc for getter/setter"
                },
                "advanced-php-tools.getter-setter-show-description": {
                    "type": "boolean",
                    "default": false,
                    "description": "Add description for getter/setter"
                },
                "advanced-php-tools.getter-setter-empty-lines-before-params": {
                    "type": "integer",
                    "default": 0,
                    "description": "Add empty lines before params in getter/setter phpdoc"
                },
                "advanced-php-tools.getter-setter-empty-lines-before-return": {
                    "type": "integer",
                    "default": 0,
                    "description": "Add empty lines before return in getter/setter phpdoc"
                },
                "advanced-php-tools.getter-setter-return-self": {
                    "type": "boolean",
                    "default": false,
                    "description": "Return class instance in setter instead of void"
                },
                "advanced-php-tools.builder-strict-types": {
                    "type": "boolean",
                    "default": true,
                    "description": "Generate objects with `declare(strict_types=1)`"
                },
                "advanced-php-tools.builder-generate-phpdoc": {
                    "type": "boolean",
                    "default": false,
                    "description": "Generate objects with phpdoc"
                }
            }
          }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.16.0",
        "typescript": "^5.7.2"
    }
}
