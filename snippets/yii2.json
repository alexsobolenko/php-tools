{
    "Yii2 controller render view": {
        "prefix": ["yrender", "yii2", "render"],
        "body": [
            "return \\$this->render('${1:view}', [${2:}]);"
        ]
    },
    "Yii2 controller redirect": {
        "prefix": ["sfredirect", "symfony", "redirect"],
        "body": [
            "return \\$this->redirect(['${1:route}', ${2:params}]);"
        ]
    },
    "Yii2 controller return json": {
        "prefix": ["yjson", "yii2", "json"],
        "body": [
            "return \\$this->asJson($0);"
        ]
    },
    "Yii2 model find": {
        "prefix": ["ymodelfind", "yii2", "find"],
        "body": [
            "\\$${1:model} = ${2:Model}::findOne(${3:id});"
        ]
    },
    "Yii2 controller load post request data": {
        "prefix": ["yloadpost", "yii2", "loadpost"],
        "body": [
            "if (\\$model->load(\\Yii::\\$app->request->post()) && \\$model->save()) {",
            "\t$0",
            "}"
        ]
    },
    "Yii2 models find by params": {
        "prefix": ["yarquery", "yii2", "find"],
        "body": [
            "\\$data = ${1:Model}::find()->where([${2:condition}])->all();"
        ]
    },
    "Yii2 model rules declaration": {
        "prefix": ["ymodelrules", "yii2", "rules"],
        "body": [
            "public function rules() {",
            "\treturn [",
            "\t\t[[${1:attributes}], '${2:rule}', ${3:options}],",
            "\t];",
            "}"
        ]
    },
    "Yii2 model attribute labels": {
        "prefix": ["ymodellabels", "yii2", "attributes", "labels"],
        "body": [
            "public function attributeLabels() {",
            "\treturn [",
            "\t\t'${1:attribute}' => '${2:Label}',",
            "\t];",
            "}"
        ]
    },
    "Yii2 html helper encode": {
        "prefix": ["yencode", "yii2"],
        "body": [
            "<?= Html::encode(${1:content}) ?>"
        ]
    },
    "Yii2 html helper link": {
        "prefix": ["ylink", "yii2"],
