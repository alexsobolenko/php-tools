{
    "Strict types": {
        "prefix": ["strict"],
        "body": [
            "declare(strict_types=1);",
            "",
            "$0"
        ]
    },
    "For i loop": {
        "prefix": ["for"],
        "body": [
            "for ($${1:i} = 0; $${1:i} < ${2:count}; $${1:i}++) {",
            "\t$0",
            "}"
        ]
    },
    "Foreach loop": {
        "prefix": ["foreach"],
        "body": [
            "foreach ($1 as $${2:value}) {",
            "\t$0",
            "}"
        ]
    },
